<Tab>:
    id: tabs
    do_default_tab: False
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: (0.99, 0.99)
    tab_pos: 'top_mid'
    tab_width: 265
    slide_text: slider


##########################################################################
    # Creating Page 1


    TabbedPanelItem:
        text: 'Strip Detection'
        color: '#FFFFFF'
        background_color: '#000000'

        StackLayout:
            orientation: 'lr-tb'
            size_hint_y: None
            height: 30
            spacing: 0
            Label:
                text: ''
                size_hint_x: 1
            Label:
                size_hint: (0.3, 0.5)
                text: 'Upload your image'
            TextInput:
                id: get_file
                readonly: True
                size_hint_x: 0.5
            Button:
                text: 'Choose File'
                size_hint_x: 0.15
                on_press: root.open_popup()
            Label:
                text: ''
                size_hint_x: 1


            Label:
                text: 'Crop the image'
                size_hint: (0.3, 0.5)
            Button:
                id: crops
                text: 'Apply cropping'
                size_hint: 0.3, 0.3
                on_press: root.mouse_crop()
            Label:
                text: ''
                size_hint_x: 1


            Label:
                text: 'Lines detection'
                size_hint: (0.3, 0.5)
            Button:
                id: detection
                text: 'Apply detection'
                size_hint: 0.3, 0.3
                on_press: root.detect_lines()
            Label:
                text: ''
                size_hint_x: 1
            Image:
                id: detected_image
                source: '<random_name>.jpg'
                size_hint_y: 10
            Label:
                text: ''
                size_hint_x: 1


            Label:
                text: 'Number of lines'
                size_hint: (0.3, 0.5)
            TextInput:
                id: lines
                readonly: True
                size_hint_x: 0.5


##########################################################################
    # Creating Page 2


    TabbedPanelItem:
        text: 'Background correction'
        color: '#FFFFFF'
        background_color: '#000000'


        StackLayout:
            orientation: 'lr-tb'
            size_hint_y: None
            height: 30
            spacing: 0
            Label:
                text: ''
                size_hint_x: 1
            Label:
                id: click_label
                text: 'Pick the suitable conversion method'
                size_hint_x: 0.4
            Spinner:
                id: spinner_id
                text: "Conversion Method"
                values: ['Gray', 'Luminance', 'Red', 'Green', 'Blue']
                on_text: root.spinner_clicked(spinner_id.text)
                size_hint_x: 0.5
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1


            Label:
                text: 'Pick the suitable thresholding method'
                size_hint_x: 0.4
            GridLayout:
                size_hint: (0.4, 3)
                cols: 2
                rows: 5
                Label:
                    text: 'Li'
                    size_hint_x: 1
                CheckBox:
                    group: 'thresholding methods'
                    on_active: root.checkbox_clicked(self, self.active, 'Li')
                Label:
                    text: 'Yen'
                    size_hint_x: 1
                CheckBox:
                    group: 'thresholding methods'
                    on_active: root.checkbox_clicked(self, self.active, 'Yen')
                Label:
                    text: 'Otsu'
                CheckBox:
                    group: 'thresholding methods'
                    on_active: root.checkbox_clicked(self, self.active, 'Otsu')
                Label:
                    text: 'Isodata'
                CheckBox:
                    group: 'thresholding methods'
                    on_active: root.checkbox_clicked(self, self.active, 'Isodata')
                Label:
                    text: 'Triangle'
                CheckBox:
                    group: 'thresholding methods'
                    on_active: root.checkbox_clicked(self, self.active, 'Triangle')

            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: ''
                size_hint_x: 1
            Label:
                text: 'Choose offset value'
                size_hint_x: .3
            MDSlider:
                min: 0
                max: 50
                value: 20
                orientation: 'horizontal'
                size_hint_x: .7
                on_value: root.slide_it(*args)
            Label:
                id: slider
                text: '0'


