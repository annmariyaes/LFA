<FileChoosePopup>:
    id: popup
    title: 'Upload the image'
    size_hint: (0.9, 0.9)
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        FileChooser:
            id: file_chooser
            path: './'
            FileChooserIconLayout

        BoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 20
            Button:
                text: 'Cancel'
                on_release: root.dismiss()

            Button:
                text: 'Upload'
                on_release: root.load(file_chooser.selection)
                id: ldbtn
                disabled: True if file_chooser.selection == [] else False
